# Example secrets file - DO NOT commit this to version control
# Copy this file to secrets.yaml and update with your actual values
# Then apply with: kubectl apply -f k8s/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: aircall-slack-secrets
  namespace: aircall-slack
type: Opaque
data:
  # Base64 encoded values - use: echo -n "your-value" | base64
  aircall-api-key: "YOUR_BASE64_ENCODED_AIRCALL_API_KEY"
  slack-webhook-url: "YOUR_BASE64_ENCODED_SLACK_WEBHOOK_URL"
  mongodb-uri: "YOUR_BASE64_ENCODED_MONGODB_URI"
  jwt-secret: "YOUR_BASE64_ENCODED_JWT_SECRET"